{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": false,
    "declaration": true,
    "alwaysStrict": true,
    "outDir": "build",
    "typeRoots": [
      "./src/types",
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["./src/types/*"]
    },
    "esModuleInterop": true,
    "sourceMap": false,
    "downlevelIteration": true
  },

  "include": [
    "src/**/*"
  ],
  "exclude": [
    "../node_modules",
    "src/public/**/*"
  ]
}
